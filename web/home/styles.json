function myFunction() {
    var x;
    var r = confirm("按下按钮!");
    if (r == true) {
        x = "你按下了\"当然要学习啦\"按钮!";
    } else {
        x = "你按下了\"先睡一觉\"按钮!";
    }
    document.getElementById("demo").innerHTML = x;
}

